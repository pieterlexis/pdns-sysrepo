module dns-common {
    yang-version "1.1";
    namespace "http://powerdns.com/yang/dns-common";
    prefix dnsc;

    organization
      "PowerDNS.COM BV";
    contact
      "Pieter Lexis <mailto:pieter.lexis@powerdns.com>";

    typedef owner-name {
        // TODO support IDN (xn--XX-XXXX)
        // TODO support symbols other than - and _
        description
          "The owner name must be a valid dns name for the owner of a resource record.
           It can start with a '*' to denote a wildcard and must end with a '.'";

        type string {
            length "1..255";
            pattern
              '(\*\.)?([a-z0-9_][-a-z0-9_]{0,61}[a-z0-9]\.)+|\.';
            pattern
              ".*--.*" {
                modifier invert-match;
            }
        }
    }

    typedef zone-name {
        type owner-name {
            pattern
              '([a-z0-9_][-a-z0-9_]{0,63}\.)+|\.';
        }
    }

    typedef host-name {
        type zone-name {
            pattern
              '([a-z0-9]([-a-z0-9_]{0,61}[a-z0-9])\.){2,}';
        }
    }
}